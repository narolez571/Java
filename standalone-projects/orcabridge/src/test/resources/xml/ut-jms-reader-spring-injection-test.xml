<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="jmsReader" class="com.ubs.orca.orcabridge.readers.JmsSingleMessageReader">
        <constructor-arg>
            <bean class="com.ubs.orca.orcabridge.support.JmsClientTestStub" />
        </constructor-arg>
        <constructor-arg ref="callback"/>
        <constructor-arg index="2" value="testDurable"/>
        <constructor-arg index="3" value="test selector"/>
    </bean>

    <bean id="callback" class="com.ubs.orca.orcabridge.readers.JmsSingleMessageReaderCallback">
        <constructor-arg>
            <bean class="com.ubs.orca.orcabridge.support.MessageProcessorTestStub" />
        </constructor-arg>
    </bean>

</beans>