<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	
	<class name="org.suggs.sandbox.hibernate.chapter2.Message" table="MESSAGES">
		<!-- -->
		<id name="id" column="ID">
            <generator class="sequence">
                <param name="sequence">MESSAGE_SEQ</param>
            </generator>
		</id>
		<!-- -->
		<property name="text" column="MSG_TEXT"/>
		<!-- -->
		<many-to-one name="nextMessage" cascade="all" column="MSG_NEXT_MSG_ID"/>
	</class>
	
</hibernate-mapping>