<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.suggs.sandbox.hibernate.caveatEmptor">
	
	<class name="BillingDetails" table="BILLING_DETAILS">
		<!-- main id -->
        <id name="id" column="ID" type="long">
            <generator class="sequence">
                <param name="sequence">BILLING_DETAILS_SEQ</param>
            </generator>
        </id>
		<!-- owner property -->
		<property name="owner" column="OWNER" type="string" not-null="true"/>
        <!-- number property -->
        <property name="number" column="NUMBER" type="string" not-null="true"/>
        <!-- created -->
		<property name="created" column="CREATED" type="timestamp" not-null="true"/>
	</class>
	
</hibernate-mapping>