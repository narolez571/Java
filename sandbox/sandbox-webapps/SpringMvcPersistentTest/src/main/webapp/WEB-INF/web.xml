<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
    id="WebApp_ID" 
    version="2.5">
    
    <welcome-file-list>
        <welcome-file>home.htm</welcome-file>
    </welcome-file-list>
    
    <!-- <icon></icon> -->
    <display-name>SpringMvcPersistentTest</display-name>
    <description>This is a test spring MVC web app solely for the purposes of
        working with spring MVC and JPA</description>
    
    <!-- <distributable></distributable> --> 
    
    <!-- ===========================================
         ========= INITIAL CONTEXT FOR APP =========
         =========================================== -->
    <context-param>
        <param-name>AdminEmail</param-name>
        <param-value>me@suggs.org.uk</param-value>
    </context-param>
    
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/roadrantz-service.xml
            /WEB-INF/roadrantz-data.xml
            /WEB-INF/roadrantz-security.xml
        </param-value>
    </context-param>
    
    <!-- <filter></filter> -->
    <!-- <filter-mapping></filter-mapping> -->
    
    <!-- ===========================================    
         ================= LISTENERS ===============    
         =========================================== -->
    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    
    <!-- ===========================================    
         ================= SERVLETS ================    
         =========================================== -->
    <servlet>
        <servlet-name>persistme</servlet-name>
        <servlet-class>
            org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>    
    </servlet>
    
    <!-- ===========================================    
         ============= SERVLET MAPPING =============    
         =========================================== -->
    <servlet-mapping>
        <servlet-name>persistme</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    
