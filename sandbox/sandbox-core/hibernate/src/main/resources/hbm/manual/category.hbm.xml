<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.suggs.sandbox.hibernate.caveatEmptor">
	
	<class name="Category" table="CE_CATEGORY">
		<!-- -->
		<id name="id" column="ID" type="long">
            <generator class="sequence">
                <param name="sequence">CE_CATEGORY_SEQ</param>
            </generator>
		</id>
		<!-- This one uses the defaults to map the type and column name -->
		<property name="name" not-null="true" column="CATEGORY_NAME"/>
        <!-- item association -  this is a unidirectional association -->
        <set name="items">
            <key column="ITEM_CATEGORY_ID"/>
            <one-to-many class="Item"/>
        </set>
        
        <set name="childCategories" catalog="all-delete-orphan">
            <key column="CATEGORY_PARENT"/>
            <one-to-many class="Category"/>
        </set>
	</class>
	
</hibernate-mapping>