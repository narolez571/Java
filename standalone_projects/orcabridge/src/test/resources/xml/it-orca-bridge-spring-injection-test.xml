<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="orcaReader" class="com.ubs.orca.orcabridge.readers.OrcaMessageReader" init-method="init">
        <property name="messageProcessor">
            <bean class="com.ubs.orca.orcabridge.teststubs.MessageProcessorTestStub"/>
        </property>
        <property name="orcaConnectionUrl" value="tcp://testhost:1234"/>
        <property name="orcaIdentity">
            <bean class="com.ubs.orca.client.api.OrcaIdentity">
                <constructor-arg type="java.lang.String" value="OrcaBridgeTestToken:1"/>
            </bean>
        </property>
    </bean>

</beans>