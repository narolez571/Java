<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    
    <!-- high level main project details -->
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.suggs</groupId>
    <artifactId>suggs-parent</artifactId>
    <packaging>pom</packaging>
    <name>Suggs parent</name>
    <version>1.0-SNAPSHOT</version>
    <description> Generic maven config for Suggs home project work
    </description>
    <url>http://www.suggs.org.uk</url>
    <inceptionYear>2007</inceptionYear>
    
    <!-- Mailing lists -->
    <mailingLists>
    </mailingLists>
    
    <!-- team developers -->
    <developers>
        <developer>
            <id>suggitpe</id>
            <name>Peter Suggitt</name>
            <email>me@suggs.org.uk</email>
            <roles>
                <role>Design and Development</role>
            </roles>
            <timezone>0</timezone>
        </developer>
    </developers>
    
    <!-- -->
    <contributors>
    </contributors>
    
    <!-- here we define our own organsation (entered into the jar/ear manifests) -->
    <organization>
    </organization>
    
    <!-- -->
    <profiles>
    </profiles>
    
    <!-- This links up the main pom to the module poms -->
    <modules>
        <module>../gui_apps</module>
        <module>../sandbox</module>
        <module>../sandbox_eclipse</module>
        <module>../sandbox_ejb</module>
        <module>../sandbox_webapps</module>
        <module>../web_apps</module>
    </modules>
    
    <build>
        <plugins>
            <!--  -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId> maven-compiler-plugin</artifactId>
                <version>2.0</version>
                <!-- best lock down version of the plugin too -->
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<useSystemClassLoader>true</useSystemClassLoader>
					<trimStackTrace>false</trimStackTrace>
					<argLine>${test.jvm.args}</argLine>
					<includes>
						<include>**/*Test.java</include>
					</includes>
				</configuration>
			</plugin>
            
        </plugins>
    </build>
    
    <!-- this is where we pick up dependent jar files and define the main Scribe 
    repository (when localised jars are 'installed') -->
    <repositories>
    </repositories>
    
    <!-- this is where we define the location of standard and local Maven plugins -->
    <pluginRepositories>
    </pluginRepositories>
    
    <!-- this is where we define the additional report to run as the main build -->
    <reporting>
    </reporting>
    
    <!-- this is where we define the high level Scribe dependencies 
    (ie those that are not project specific) -->
    <dependencies>
        <!-- main compile time dependencies -->
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate</artifactId>
            <version>3.2.3</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring</artifactId>
            <version>2.5.1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-mock</artifactId>
            <version>2.5.1</version>
            <scope>compile</scope>
        </dependency>
        
        <!-- site dependencies -->
        <!--
        <dependency>
            <groupId>clover</groupId>
            <artifactId>clover</artifactId>
            <version>1.3.6</version>
            <scope>test</scope>
        </dependency>
        -->
    </dependencies>
    
</project>
