<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
    
    <extension point="org.eclipse.ui.actionSets">
        <actionSet label="Sample Action Set" visible="true"
            id="SandboxTestEclipsePlugin.actionSet">
            
            <menu label="SandBox" id="sandboxMenu">
                <separator name="sandboxGroup">
                </separator>
            </menu>
            
            <action label="Hello world" icon="icons/sample.gif"
                class="org.suggs.sandbox_eclipse.testplugin.actions.SayHello"
                tooltip="Hello, Eclipse world"
                menubarPath="sandboxMenu/sandboxGroup" toolbarPath="sandboxGroup"
                id="org.suggs.sandbox_eclipse.testplugin.actions.SayHello">
            </action>
            
        </actionSet>
    </extension>
    
    <extension point="org.eclipse.ui.popupMenus">
       <objectContribution
             id="SandboxTestEclipsePlugin.contribution1"
             objectClass="org.eclipse.core.runtime.IAdaptable">
          <menu
                id="SandboxTestEclipsePlugin.menu1"
                label="Scribbler"
                path="additions">
             <separator
                   name="group1">
             </separator>
          </menu>
          <action
                class="org.suggs.sandbox_eclipse.testplugin.actions.RunThroughFile"
                enablesFor="1"
                id="SandboxTestEclipsePlugin.newAction"
                label="Generate Spring XML"
                menubarPath="SandboxTestEclipsePlugin.menu1/group1">
          </action>
       </objectContribution>
    </extension>
    
</plugin>
