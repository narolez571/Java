<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!-- Copyright 2006 UBS Investment Bank -->
<beans>
    
    <!-- this is the main loader impl -->
    <bean id="jmsHelper" class="org.suggs.apps.mercury.impl.JmsHelper">
        <property name="connectionManagerPanel" ref="connMgrPanelBean"/>
        <property name="connectionStorePanel" ref="connStrPanelBean"/>
        <property name="connectionButtons" ref="connButtonsBean"/>
        <property name="connectionController" ref="connCtrlBean"/>
    </bean>
    
    <!-- This is the panel interface to the connection manager  -->
    <bean id="connMgrPanelBean" class="org.suggs.apps.mercury.view.connection.JmsConnectionManagerPanel">
        <constructor-arg ref="connMgrBean"/>
    </bean>
    
    <bean id="connStrPanelBean" class="org.suggs.apps.mercury.view.connection.JmsConnectionStorePanel">
        <constructor-arg ref="connStrBean"/>
    </bean>
    
    <!-- Main functional interface -->
    <bean id="connButtonsBean" class="org.suggs.apps.mercury.view.connection.JmsConnectionButtons"/>
    
    <!-- This is the main connection manager bean -->
    <bean id="connMgrBean" class="org.suggs.apps.mercury.model.connection.manager.JmsConnectionManager"/>
    
    <!-- This is the main connection store bean -->
    <bean id="connStrBean" class="org.suggs.apps.mercury.model.connection.store.JmsConnectionStore"/>
    
    <!-- This is the MVC controller for the connections -->
    <bean id="connCtrlBean" class="org.suggs.apps.mercury.controller.impl.ConnectionController">
        <constructor-arg ref="connStrBean"/>
        <constructor-arg ref="connMgrBean"/>
        <constructor-arg ref="connButtonsBean"/>
        <constructor-arg ref="connStrPanelBean"/>
        <constructor-arg ref="connMgrPanelBean"/>
    </bean>
    
</beans>