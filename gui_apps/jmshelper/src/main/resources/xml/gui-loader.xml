<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!-- Copyright 2006 UBS Investment Bank -->
<beans>
    
    <!-- this is the main loader impl -->
    <bean id="jmsHelper" class="org.suggs.gui.jms.impl.JmsHelper">
        <property name="connectionManagerPanel" ref="connMgrPanelBean"/>
        <property name="connectionManagerButtons" ref="connMgrButtonsBean"/>
        <property name="connectionStorePanel" ref="connStrPanelBean"/>
        <property name="connectionStoreButtons" ref="connStrButtonsBean"/>
    </bean>
    
    <!-- This is the panel interface to the connection manager  -->
    <bean id="connMgrPanelBean" class="org.suggs.gui.jms.view.JmsConnectionManagerPanel">
        <property name="connectionManager" ref="connMgrBean"/>
    </bean>
    <bean id="connMgrButtonsBean" class="org.suggs.gui.jms.view.JmsConnectionManagerButtons"/>
    
    <bean id="connStrPanelBean" class="org.suggs.gui.jms.view.JmsConnectionStorePanel">
        <property name="connectionStore" ref="connStrBean"/>
    </bean>
    <bean id="connStrButtonsBean" class="org.suggs.gui.jms.view.JmsConnectionStoreButtons"/>
    
    
    <!-- This is the main connection manager bean -->
    <bean id="connMgrBean" class="org.suggs.gui.jms.connection.impl.JmsConnectionManager"/>
    
    <!-- This is the main connection store bean -->
    <bean id="connStrBean" class="org.suggs.gui.jms.connection.impl.JmsConnectionStore"/>
    
</beans>