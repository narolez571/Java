<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!-- Copyright 2006 UBS Investment Bank -->
<beans>
    
    <!-- this is the main loader impl -->
    <bean id="jmsHelper" class="org.suggs.gui.impl.JmsHelper">
        <property name="connectionPanel" ref="connMgrPanel"/>
    </bean>
    
    <!-- This is the panel interface to the connection manager  -->
    <bean id="connMgrPanel" class="org.suggs.gui.panel.JmsConnectionManagerPanel">
        <property name="connectionManager" ref="connMgrBean"/>
        <property name="connectionStore" ref="connStrBean"/>
    </bean>
    
    <!-- This is the main connection manager bean -->
    <bean id="connMgrBean" class="org.suggs.gui.connection.impl.JmsConnectionManager"/>
    
    <!-- This is the main connection store bean -->
    <bean id="connStrBean" class="org.suggs.gui.connection.impl.JmsConnectionStore"/>
    
</beans>